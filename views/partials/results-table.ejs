<!-- Results Table Partial -->
<div id="results-container" class="results-container">
    <h2 id="results-heading">Results for Collection</h2>
    <p style="text-align: center;" id="results-subheading">Sorted by "Want Count" (most wanted items first)</p>
    
    <div class="table-container">
        <table class="records-table" id="recordsTable">
            <thead>
                <tr>
                    <th class="numeric-cell">#</th>
                    <th class="cover-cell">Cover</th>
                    <th class="sortable" data-sort="artist">Artist</th>
                    <th class="sortable" data-sort="title">Title</th>
                    <th class="sortable" data-sort="format">Format</th>
                    <th class="sortable numeric-cell" data-sort="haveCount">Have</th>
                    <th class="sortable numeric-cell" data-sort="wantCount">Want</th>
                    <th class="sortable numeric-cell" data-sort="numForSale">For Sale</th>
                    <th class="sortable numeric-cell" data-sort="scarcityRatio">Scarcity Ratio</th>
                    <th class="sortable numeric-cell" data-sort="medianPrice">Suggested Price</th>
                </tr>
            </thead>
            <tbody id="records-tbody">
                <!-- Records will be populated here via JavaScript -->
            </tbody>
        </table>
    </div>
</div>